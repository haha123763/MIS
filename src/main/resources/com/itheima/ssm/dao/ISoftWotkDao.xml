<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itheima.ssm.dao.ISoftWorkDao">

    <resultMap type="com.itheima.ssm.domain.SoftWork" id="softWork">
    </resultMap>

    <select id="findAllByPage" resultMap="softWork">
		select * from softwork
	</select>

    <select id="selectByTerms" resultMap="softWork">
            select * from softwork
             where 1=1
             and name like '%${name}%'
             and applicant like '%${applicant}%'
              and status like '%${status}%'

	</select>

    <select id="findById" resultMap="softWork">
		select * from softwork where id=#{id}
	</select>


    <insert id="save">
          insert into softwork(id,name,status,authDate,applyDate,number,applicant,rank,scanFile)
          values(#{id},#{name},#{status},#{authDate},#{applyDate},#{number},#{applicant},#{rank},#{scanFile})
 </insert>


    <update id="update">
           update softwork
            set name=#{name},
            status=#{status},
            number=#{number},
            applicant=#{applicant},
            rank=#{rank}
            where id=#{id}

	</update>

    <delete id="deleteById">
		delete from softwork where id=#{id}
	</delete>

</mapper>